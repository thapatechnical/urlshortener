<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <%- include('../partials/header') %>

    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Password Reset</h1>
            <h2 class="text-xl font-semibold text-gray-700 mb-6">Set Your New Password</h2>

            <!-- Error Message Display -->
            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                <div class="mb-4 p-3 bg-red-100 border-l-4 border-red-500 text-red-700 rounded">
                    <% errors.forEach(error => { %>
                        <p class="flex items-center">
                            <span class="material-icons mr-2">error</span>
                            <%= error.msg || error %>
                        </p>
                    <% }); %>
                </div>
            <% } %>

            <!-- Success Message Display -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="mb-4 p-3 bg-green-100 border-l-4 border-green-500 text-green-700 rounded flex items-center">
                    <span class="material-icons mr-2">check_circle</span>
                    <%= success %>
                </div>
            <% } %>

            <form action="/reset-password" method="POST" class="space-y-4">
                <input type="hidden" name="token" value="<%= typeof token !== 'undefined' ? token : '' %>">
                
                <div>
                    <label class="font-medium text-gray-700 mb-2 block">New Password</label>
                    <input 
                        type="password" 
                        name="newPassword" 
                        placeholder="Enter new password" 
                        class="w-full px-4 py-2 border <%= typeof errors !== 'undefined' && errors.some(e => e.param === 'newPassword') ? 'border-red-500' : 'border-gray-300' %> rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required
                        minlength="8"
                        value="<%= typeof formData !== 'undefined' ? formData.newPassword : '' %>"
                    >
                    <ul class="mt-2 text-sm text-gray-600 list-disc pl-5">
                        <li>At least 8 characters</li>
                        <li>Contains a number</li>
                        <li>Includes uppercase and lowercase letters</li>
                    </ul>
                </div>

                <div>
                    <label class="font-medium text-gray-700 mb-2 block">Confirm Password</label>
                    <input 
                        type="password" 
                        name="confirmPassword" 
                        placeholder="Confirm new password" 
                        class="w-full px-4 py-2 border <%= typeof errors !== 'undefined' && errors.some(e => e.param === 'confirmPassword') ? 'border-red-500' : 'border-gray-300' %> rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required
                        minlength="8"
                        value="<%= typeof formData !== 'undefined' ? formData.confirmPassword : '' %>"
                    >
                </div>

                <button 
                    type="submit" 
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200 mt-4 flex items-center justify-center"
                >
                    <span class="material-icons mr-2">lock_reset</span>
                    Reset Password
                </button>
            </form>

            <div class="mt-6 text-center">
                <a href="/login" class="text-blue-600 hover:underline flex items-center justify-center">
                    <span class="material-icons mr-1">arrow_back</span>
                    Back to Login
                </a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>