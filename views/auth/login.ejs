<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <!-- Include Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Include Material Icons (for icons) -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!-- Include Google Sign-In Library -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <!-- Include Material Design Icon Font -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <!-- Include GitHub Octicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/octicons/4.4.0/font/octicons.min.css">
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/header') %>

    <!-- Login Page Content -->
    <section class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden w-full max-w-4xl flex">
        <!-- Image Section -->
        <div class="hidden md:block w-1/2 bg-blue-600 p-8 flex items-center justify-center">
          <figure>
            <img
              src="images/signin-image.jpg"
              alt="Sign In Image"
              class="w-full h-auto rounded-lg"
            />
          </figure>
        </div>

        <!-- Form Section -->
        <div class="w-full md:w-1/2 p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Sign In</h2>

          <!-- Login Form -->
          <form action="/login" method="POST" class="space-y-6">
            <!-- Email Input -->
            <div class="flex items-center border-b border-gray-300 py-2">
              <span class="material-icons text-gray-500 mr-2">person</span>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Enter Your Email"
                class="w-full outline-none focus:border-blue-500"
                required
              />
            </div>

            <!-- Password Input -->
            <div class="flex items-center border-b border-gray-300 py-2">
              <span class="material-icons text-gray-500 mr-2">lock</span>
              <input
                type="password"
                name="password"
                id="your_pass"
                placeholder="Password"
                class="w-full outline-none focus:border-blue-500"
                required
              />
            </div>

            <!-- Remember Me Checkbox -->
            <div class="flex items-center">
              <input
                type="checkbox"
                name="remember-me"
                id="remember-me"
                class="mr-2"
              />
              <label for="remember-me" class="text-gray-700">Remember me</label>
            </div>

            <!-- Error Messages -->
            <% if (error && error.length > 0) { %>
              <% error.forEach((error) => { %>
                <p class="text-red-500 text-sm"><%= error %></p>
              <% }); %>
            <% } %>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200"
            >
              Log In
            </button>

            <!-- Forgot Password Link -->
            <div class="text-center">
              <a href="/reset-password" class="text-gray-600 hover:text-blue-600 hover:underline">Forgot password?</a>
            </div>
          </form>

          <!-- Create Account Link -->
          <div class="mt-6 text-center">
            <p class="text-gray-600">
              Don't have an account?
              <a href="/register" class="text-blue-600 hover:underline">Create an account</a>
            </p>
          </div>

          <!-- Social Login Section -->
          <div class="mt-8">
            <p class="text-center text-gray-600 mb-4">Or log in with</p>
            <div class="flex flex-col items-center space-y-4">
              <!-- Custom Google Sign-In Button -->
              <a href="/google" class="w-full max-w-xs">
                <button class="w-full flex items-center justify-center gap-2 bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-700 hover:bg-gray-50 transition duration-200">
                  <i class="zmdi zmdi-google text-red-500"></i>
                  <span>Sign in with Google</span>
                </button>
              </a>
              
              <!-- Custom GitHub Sign-In Button -->
              <a href="/github" class="w-full max-w-xs">
                <button class="w-full flex items-center justify-center gap-2 bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-700 hover:bg-gray-50 transition duration-200">
                  <span class="octicon octicon-mark-github text-gray-800"></span>
                  <span>Sign in with GitHub</span>
                </button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/footer') %>
  </body>
</html>