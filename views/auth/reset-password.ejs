<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <style>
      .fade-in { animation: fadeIn 0.3s ease-in; }
      @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    </style>
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/header') %>

    <section class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden w-full max-w-md">
        <div class="p-8">
          <h1 class="text-2xl font-bold text-gray-800 mb-2">Reset Your Password</h1>
          
          <!-- Login Status -->
          <% if (typeof isLoggedIn === 'undefined' || !isLoggedIn) { %>
            <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-4 fade-in">
              <p class="text-blue-700">You are not logged in</p>
            </div>
          <% } %>

          <!-- Show messages only after form submission -->
          <% if (formSubmitted) { %>
            <!-- Success Message -->
            <% if (success && success.length > 0) { %>
              <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 fade-in">
                <% success.forEach((msg) => { %>
                  <p class="text-green-700"><%= msg %></p>
                <% }); %>
              </div>
            <% } %>

            <!-- Error Message -->
            <% if (error && error.length > 0) { %>
              <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 fade-in">
                <% error.forEach((err) => { %>
                  <p class="text-red-700"><%= err %></p>
                <% }); %>
              </div>
            <% } %>
          <% } %>

          <!-- Form -->
          <form  method="POST" class="space-y-6">
            <div class="flex items-center border-b border-gray-300 py-2">
              <span class="material-icons text-gray-500 mr-2">email</span>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Enter Your Registered Email"
                class="w-full outline-none focus:border-blue-500"
                required
                <% if (typeof email !== 'undefined') { %>
                  value="<%= email %>"
                <% } %>
              />
            </div>

            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200"
            >
              submit
            </button>
          </form>

          <div class="text-center mt-6">
            <a href="/login" class="text-gray-600 hover:text-blue-600 hover:underline">
              <span class="material-icons align-middle">arrow_back</span>
              Back to Login
            </a>
          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/footer') %>
  </body>
</html>